{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "rootDir": "./",
    "types": ["chrome"],
    "lib": ["ES2020", "DOM"],
    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "background.ts",
    "content.ts", 
    "popup.ts",
    "injected.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "*.js"
  ]
} 